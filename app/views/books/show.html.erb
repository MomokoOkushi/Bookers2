
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
      <%= render 'newbook', book: @book_new %>
    </div>
    <div class="offset-md-1">
    </div>
    <div class="col-md-8">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %><br><%= @user.name %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", "/books/#{@book.id}/edit"%></td>
            <td><%= link_to "Delete", "/books/#{@book.id}", method: :delete %></td>
          <% end %>
      </table>
  </div>
</div>