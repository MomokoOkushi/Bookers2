
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
      <%= render 'newbook', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td>
            <%= link_to "/users/#{@user.id}" do %>
              <%= image_tag @user.get_profile_image(100,100) %>
            <% end %>
            <br><%= link_to @user.name, "/users/#{@user.id}" %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td id="favorite_btn_<%= @book.id %>">
            <%= render 'favorites/btn', book: @book %>
          </td>
          <td>
            コメント<span id="comment_count"><%= @book.book_comments.count %></span>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", "/books/#{@book.id}/edit"%></td>
            <td><%= link_to "Destroy", "/books/#{@book.id}", method: :delete %></td>
          <% end %>
      </table>
      <div id="book_comments_comment">
        <%= render 'book_comments/comment',book: @book, book_comment: @book_comment %>
      </div>
  </div>
</div>