<% if @book.errors.any? %>
  <p>error try again </p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
      <%= render 'newbook', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="index">
        <h4>Books</h4>
        <table class="table">
          <thread>
            <tr>
              <th>ã€€</th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thread>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to "/users/#{book.user.id}" do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td><%= link_to book.title,"/books/#{book.id}" %></td>
            <td><%= book.body %></td>
            <td id="favorite_btn_<%= @book_find.id %>">
               <%= render 'favorites/btn', book: @book_find %>
            </td>
          </tr>
        <% end %>
        </table>
      </div>
    </div>
  </div>
</div>