<% if @booknew.errors.any? %>
  <p>error try again </p>
  <ul>
    <% @booknew.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="offset-md-1">
    </div>
    <div class="col-md-8">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Update Book' %>
        <p>
          <%= link_to "Show", book_path(@book.id) %>|
          <%= link_to "Back", books_path %>
        </p>
      <% end %>
    </div>
  </div>
</div>