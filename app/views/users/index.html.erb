<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', user: @userinfo %>
      <%= render 'books/newbook', book: @book %>
    </div>
    <div class="offset-md-1">
    </div>
    <div class="col-md-8">
      <h1>Users</h1>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th> </th>
        </tr>
      </table>
      <% @user.each do |user| %>
      <table class="table">
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "show", "/users/#{user.id}" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>




