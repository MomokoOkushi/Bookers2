<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', user: @user %>
      <%= render 'books/newbook', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="users_books">
        <h1>Books</h1>
        <table class="table">
          <thead>
          <tr>
            <th>ã€€</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          </thead>
        <tbody>
           <% @books.each do |book| %>
          <tr>
            <td
              <%= link_to "/users/#{@user.id}" do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
              <br><%= link_to @user.name, "/users/#{@user.id}" %>
            </td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body%></td>
          </tr>
          <% end %>
        </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
